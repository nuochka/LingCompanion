<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.stories.StoryFragment"
    android:padding="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/getStoryButton">

                <RelativeLayout
                    android:id="@+id/storyContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/storyTitleTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            style="@style/titles"
                            android:padding="10dp"
                            android:gravity="center"
                            android:text="@string/random_story"/>

                        <TextView
                            android:id="@+id/storyAuthorTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/storyTitleTextView"
                            android:layout_marginTop="8dp"
                            style="@style/SubTitle"
                            android:textColor="@color/grey"
                            />

                        <TextView
                            android:id="@+id/storyContentTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/SubTitle"
                            android:textColor="@color/black"
                            android:layout_below="@id/storyAuthorTextView"
                            android:layout_marginTop="18dp"
                            />

                        <TextView
                            android:id="@+id/storyMoralTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/storyContentTextView"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/primary_color" />
                </RelativeLayout>

        </ScrollView>
        <Button
            android:id="@+id/getStoryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            style="@style/ButtonPurple"
            android:text="@string/get_random_story_btn" />


        <Button
            android:id="@+id/speakButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="280dp"
            android:textColor="@color/white"
            android:text="@string/play"
             />
</RelativeLayout>

